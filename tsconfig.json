{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "isolatedModules": true
  },
  "lib": ["es2015"],
  "include": ["src"]
}
